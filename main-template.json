{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
    },
    "variables": {
        "apiVersions": {
            "vnetApiVersion": "2017-04-01",
            "pIPApiVersion": "2017-08-01",
            "nsgApiVersion": "2017-06-01",
            "nicApiVersion": "2016-09-01",
            "vmApiVersion": "2016-04-30-preview",
            "storageApiVersion": "2015-06-15",
            "availabilitySetApiVersion": "2017-03-30"
        },
        "vnetSettings": {
            "location": "[variables('location')]",
            "networkApiVersion": "2016-03-30",
            "virtualNetworkName": "sample-vnet",
            "addressPrefix": "10.0.0.0/16",
            "subnet1Name": "mgmt-subnet",
            "subnet1Prefix": "10.0.1.0/24",
            "subnet2Name": "mirror-subnet",
            "subnet2Prefix": "10.0.2.0/24"
        },
        "sampleVMSettings": {
            "location": "[variables('location')]",
            "publicIpName": "sampleVM-pip",
            "publicIpAddressType": "Dynamic",
            "dnsLabelPrefix": "[concat('sampleVM',variables('suffix'))]",
            "nsgName": "sampleVM-nsg",
            "nicName": "sampleVM-nic",
            "vmName": "sampleVM",
            "adminUsername": "adminuser",
            "adminPassword": "Password@1234",
            "vmSize": "Standard_D1",
            "publisher": "Canonical",
            "offer": "UbuntuServer",
            "sku": "16.04-LTS",
            "version": "latest"
        },
        "location": "eastus",
        "suffix": "[substring(uniqueString(resourceGroup().id), 0, 5)]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "name": "VirtualNetwork",
            "apiVersion": "2016-02-01",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/rsreddy281/ARM-Learning/master/nested/vnet.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vnetSettings": {
                        "value": "[variables('vnetSettings')]"
                    },
                    "apiVersions": {
                        "value": "[variables('apiVersions')]"
                    }
                }
            }
        },

        {
            "type": "Microsoft.Resources/deployments",
            "name": "sampleVM",
            "apiVersion": "2016-02-01",
            "dependsOn": [
                "VirtualNetwork"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/rsreddy281/ARM-Learning/master/nested/sampleVM.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "sampleVMSettings": {
                        "value": "[variables('sampleVMSettings')]"
                    },
                    "vnetSettings": {
                        "value": "[variables('vnetSettings')]"
                    },
                    "apiVersions": {
                        "value": "[variables('apiVersions')]"
                    }
                }
            }
        }

    ],
    "outputs": {
        "sampleVMUrl": {
            "type": "string",
            "value": "[concat(variables('sampleVMSettings').dnsLabelPrefix,'.',variables('location'),'.cloudapp.azure.com:3000')]"
        },
        "vmLoginUsername": {
            "type": "string",
            "value": "admin"
        },
        "vmLoginPassword": {
            "type": "string",
            "value": "admin"
        }
    }
}
